{
    "name": "mikro-orm-standard-schema",
    "version": "0.1.0",
    "description": "Expose standard schema compatible converters from/to MikroORM entities.",
    "main": "index.js",
    "type": "commonjs",
    "scripts": {
        "clean": "rimraf ./dist",
        "build": "tsc --build ./tsconfig.build.json",
        "rebuild": "npm run clean && npm run build",
        "format": "prettier --write ./src/** ./test/**/*.ts ./*.mjs ./*.json",
        "lint": "eslint --fix ./src ./test",
        "test": "jest"
    },
    "keywords": [
        "standard-schema",
        "mikro-orm",
        "database",
        "entities"
    ],
    "author": "Vasil Rangelov",
    "license": "MIT",
    "devDependencies": {
        "@eslint/js": "^9.13.0",
        "@jest/globals": "^29.7.0",
        "@mikro-orm/core": "^6.3.13",
        "@mikro-orm/libsql": "^6.3.13",
        "@standard-schema/spec": "^1.0.0-beta.1",
        "@types/node": "^22.7.8",
        "eslint": "^9.13.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-import-resolver-typescript": "^3.6.3",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-jest": "^28.8.3",
        "eslint-plugin-n": "^17.11.1",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "eslint-plugin-unicorn": "^56.0.0",
        "globals": "^15.11.0",
        "jest": "^29.7.0",
        "prettier": "^3.3.3",
        "rimraf": "^6.0.1",
        "ts-jest": "^29.2.5",
        "typescript": "^5.6.3",
        "typescript-eslint": "^8.11.0"
    },
    "peerDependencies": {
        "@mikro-orm/core": "^6"
    }
}
